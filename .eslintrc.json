{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest/globals": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["unused-imports", "jest"],
    "rules": {
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "no-unused-vars": ["error", {"argsIgnorePattern": "next"}],
        "prefer-arrow-callback": ["error"],
        "prefer-const": ["error"],
        "unused-imports/no-unused-imports": "error",
        "semi": ["error", "always"]
    }
}
